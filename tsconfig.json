{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "",
    "jsx": "react",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es5", "scripthost", "es2020"]
  },
  "include": ["src/**/*"]
}
