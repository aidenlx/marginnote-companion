{
  "name": "marginnote-companion",
  "version": "0.1.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "dev": "rollup --config rollup.config.js -w",
    "build": "rollup --config rollup.config.js --environment BUILD:production",
    "release": "release-it",
    "test": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@alx-plugins/marginnote": "^1.7.2",
    "@alx-plugins/obsidian-bridge": "^1.1.2",
    "@release-it/bumper": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/electron": "^1.6.10",
    "@types/jest": "^26.0.23",
    "@types/json2md": "^1.5.0",
    "@types/marked": "^2.0.3",
    "@types/node": "^14.17.2",
    "@types/turndown": "^5.0.0",
    "assert-never": "^1.2.1",
    "codemirror": "^5.61.1",
    "cz-conventional-changelog": "^3.3.0",
    "gray-matter": "^4.0.3",
    "jest": "^26.6.3",
    "json2md": "^1.10.0",
    "marked": "^2.0.7",
    "obsidian": "^0.12.5",
    "release-it": "^14.7.0",
    "rollup": "^2.50.6",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tslib": "^2.0.3",
    "typescript": "^4.3.2"
  },
  "release-it": {
    "hooks": {
      "after:bump": "sh scripts/bump-version.sh && npm run build",
      "after:git:release": "echo After git push, before github release",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "${version}",
      "tagAnnotation": "Release v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "assets": [
        "main.js",
        "manifest.json",
        "styles.css"
      ],
      "proxy": "http://127.0.0.1:7890",
      "releaseName": "${version}"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": "manifest.json"
      },
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
